extends defaults/layout.pug
include defaults/mixins.pug
block content
    .container
        .card__preview
            .card__preview--highlight
            .card__preview--front
                .card__preview--top
                    +addPicture('chip.png', 'card__preview--chip')
                    .card__preview--brand
                        +addPicture('visa.png', 'card__preview--visa visible')
                        +addPicture('mastercard.png', 'card__preview--mastercard')
                .card__preview--number 
                .card__preview--container
                    .card__preview--col
                        .card__preview--info Card Holder
                        .card__preview--holder
                            .card__preview--holder-placeholder Jan Kowalski 
                            .card__preview--holder-text
                    .card__preview--col
                        .card__preview--info Expires
                        .card__preview--row
                            .card__preview--month
                                span MM<br>
                            div /
                            .card__preview--year
                                span YY<br>
            .card__preview--back
                .card__preview--block
                .card__preview--info CW 
                .card__preview--cw
                .card__preview--brand
                    +addPicture('visa.png', 'card__preview--visa visible')
                    +addPicture('mastercard.png', 'card__preview--mastercard')

        form.card__form
            .card__form--col
                label(for="cardNumber") Card Number
                input.card__form--input#cardNumber(type="text")
            .card__form--col
                label(for="cardHolder") Card Name
                input.card__form--input#cardHolder(type="text")
            .card__form--row
                .card__form--row
                    .card__form--col
                        label(for="month") Expiration Date
                        select.card__form--select#month
                            option(disabled selected) Month
                            option 01
                            option 02
                            option 03
                            option 04
                            option 05
                            option 06
                            option 07
                            option 08
                            option 09
                            option 10
                            option 11
                            option 12
                    select.card__form--select#year
                        option(disabled selected) Year
                .card__form--col
                    label(for="cw") CW
                    input.card__form--input#cw(type="text")
            button(type="submit") Submit