extends defaults/layout.pug
include defaults/mixins.pug
block content
    .container
        .card__preview
            .card__preview--top
                img(src="../images/chip.png").card__preview--chip
                img.card__preview--brand
            .card__preview--number XXXX XXXX XXXX 
            .card__preview--container
                .card__preview--holder Jan Kowalski
                .card__preview--expires MM/YY
        form.card__form
            label(for="card__form--input-number")
            input#card__form--input-number(type="text" placeholder="Card number")
            input#card__form--input-holder(type="text" placeholder="Card holder")
            .card--container
                select#card__form--select-month
                    option 01
                    option 02
                    option 03
                    option 04
                    option 05
                    option 06
                    option 07
                    option 08
                    option 09
                    option 10
                    option 11
                    option 12
                    label(for="card__form--select-year")
                select#card__form--select-year
                    option 2025
                    option 2026
                    option 2027
                    option 2028
                    option 2028
                    option 2029
                    option 2030
                input#card__form--input-cw(type="text" placeholder="Card cw")
            button(type="submit") Submit